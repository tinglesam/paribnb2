<%= form_for(@listing) do |form| %>
  

<div class="form-group" >
<label class="sr-only" for="exampleInputEmail2">Listing Name</label>
<%= form.text_field :name ,class:"form-control" ,id:"exampleInputEmail2", placeholder:"Listing Name" %>
</div>

<div class="form-group" >
<label class="sr-only" for="exampleInputEmail2">Price</label>
<%= form.number_field :price ,class:"form-control" ,id:"exampleInputEmail2", placeholder:"$ Price" %>
</div>

<div class="form-group">
<label class="sr-only" for="exampleInputPassword2"> Address</label>
<%= form.text_field :address, class:"form-control", id:"exampleInputPassword2", placeholder:"Address"%>
</div>

<div class="form-group" >
<label class="sr-only" for="exampleInputEmail2">Number of People</label>
<%= form.number_field :people ,class:"form-control" ,id:"exampleInputEmail2", placeholder:"How many people can stay?" %>
</div>

<div class="form-group" >
<label class="sr-only" for="exampleInputEmail2">Amenitites</label>
<%= form.text_field :amenities ,class:"form-control" ,id:"exampleInputEmail2", placeholder:" Amenities" %>
</div>
<div class="form-group" >
<label class="sr-only" for="exampleInputEmail2">Start Date</label>
<%= form.date_field :start_date ,class:"form-control" ,id:"exampleInputEmail2" %>
</div>

<div class="form-group" >
<label class="sr-only" for="exampleInputEmail2">End Date</label>
<%= form.date_field :end_date ,class:"form-control" ,id:"exampleInputEmail2" %>
</div>

<div class="submit-field">
<%= form.submit "Create Listing" %>
</div>




<% end %>