<h1>Edit Profile</h1>

<%= form_for(@user) do |form| %>
  

<div class="form-group" >
<label class="sr-only" for="exampleInputEmail2">First Name</label>
 <b>First: </b> <%= form.label  @user.first_name %>
<%= form.text_field :first_name ,class:"form-control" ,id:"exampleInputEmail2", placeholder:"First Name" %>
</div>

<div class="form-group" >
<label class="sr-only" for="exampleInputEmail2">Last Name</label>
 <b>Last: </b> <%= (form.label @user.last_name) %>
<%= form.text_field :last_name ,class:"form-control" ,id:"exampleInputEmail2", placeholder:"Last Name" %>
</div>

<div class="form-group">
<b>Email: </b> 
<label class="sr-only" for="exampleInputPassword2"> Email</label>
<%= form.text_field :email, class:"form-control", id:"exampleInputPassword2", placeholder:"Email"%>
</div>

<div class="form-group">
<b>Avatar Picture: </b> 
<label class="sr-only" for="exampleInputPassword2"> Avatar</label>
<%= form.file_field :avatar, class:"form-control", id:"exampleInputPassword2", placeholder:"Upload a Picture"%>
</div>

<div class="submit-field">
<%= form.submit "Update Profile" %>
</div>




<% end %>